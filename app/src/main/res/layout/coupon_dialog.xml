<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF8E1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_manage_name"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/frame"
        android:elevation="20dp"
        android:fontFamily="@font/one_mobile_pop"
        android:gravity="center"
        android:text="문신혁"
        android:onClick="onTextViewClicked"
        android:clickable="true"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_manage_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_manage_number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:textSize="40sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_manage_name"
        app:layout_constraintStart_toEndOf="@+id/tv_manage_number" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="24dp"
        android:background="#656565"
        app:layout_constraintTop_toBottomOf="@+id/tv_manage_name"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tv_manage_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="20dp"
        android:fontFamily="@font/one_mobile_pop"
        android:gravity="center"
        android:text="7901"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_manage_name"
        app:layout_constraintStart_toEndOf="@+id/tv_manage_name" />

    <TextView
        android:id="@+id/tv_manage_coupon1_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="120dp"
        android:fontFamily="@font/one_mobile_pop"
        android:text="현금쿠폰 ="
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_coupon2_plus" />

    <TextView
        android:id="@+id/tv_manage_coupon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="현금쿠폰"
        android:fontFamily="@font/one_mobile_pop"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintStart_toEndOf="@+id/tv_manage_coupon1_"
        app:layout_constraintTop_toTopOf="@+id/tv_manage_coupon1_" />

    <TextView
        android:id="@+id/tv_manage_coupon2_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/one_mobile_pop"
        android:text="카드쿠폰 ="
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="@+id/tv_manage_coupon1_"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_manage_coupon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="카드쿠폰"
        android:fontFamily="@font/one_mobile_pop"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintStart_toEndOf="@+id/tv_manage_coupon2_"
        app:layout_constraintTop_toTopOf="@+id/tv_manage_coupon2_" />

    <Button
        android:id="@+id/btn_coupon1_plus"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/one_mobile_title"
        android:text="+1"
        android:textColor="#ffffff"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="@+id/tv_manage_coupon1_"
        app:layout_constraintTop_toBottomOf="@+id/tv_coupon1_ex" />

    <Button
        android:id="@+id/btn_coupon2_plus"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/one_mobile_title"
        android:text="+1"
        android:textColor="#ffffff"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="@+id/tv_manage_coupon2_"
        app:layout_constraintTop_toBottomOf="@+id/tv_coupon1_ex2" />

    <Button
        android:id="@+id/btn_coupon2_minus"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/one_mobile_title"
        android:text="-1"
        android:textColor="#ffffff"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn_coupon2_plus"
        app:layout_constraintTop_toTopOf="@+id/btn_coupon2_plus" />

    <Button
        android:id="@+id/btn_coupon2_use"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/button_use"
        android:fontFamily="@font/one_mobile_title"
        android:text="사용"
        android:textColor="#ffffff"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn_coupon2_minus"
        app:layout_constraintTop_toTopOf="@+id/btn_coupon2_minus" />

    <Button
        android:id="@+id/btn_coupon1_minus"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/one_mobile_title"
        android:text="-1"
        android:textColor="#ffffff"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn_coupon1_plus"
        app:layout_constraintTop_toTopOf="@+id/btn_coupon1_plus" />

    <Button
        android:id="@+id/btn_coupon1_use"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/button_use"
        android:fontFamily="@font/one_mobile_title"
        android:text="사용"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn_coupon1_minus"
        app:layout_constraintTop_toTopOf="@+id/btn_coupon1_minus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/button_use"
            android:fontFamily="@font/one_mobile_title"
            android:text="홈"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textSize="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_coupon_save"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_round"
            android:textSize="45dp"
            android:fontFamily="@font/one_mobile_title"
            android:text="저장"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="667dp" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:textSize="45dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/one_mobile_title"
            android:text="초기화"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_manage_coupon1_"
        app:layout_constraintEnd_toStartOf="@+id/tv_manage_coupon1_"
        app:layout_constraintTop_toTopOf="@+id/tv_manage_coupon1_"
        app:srcCompat="@drawable/cash" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_manage_coupon2_"
        app:layout_constraintEnd_toStartOf="@+id/tv_manage_coupon2_"
        app:layout_constraintTop_toTopOf="@+id/tv_manage_coupon2_"
        app:srcCompat="@drawable/credit_card" />

    <TextView
        android:id="@+id/tv_coupon1_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/one_mobile_pop"
        android:text="10000원 할인"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="@+id/tv_manage_coupon1_"
        app:layout_constraintTop_toBottomOf="@+id/tv_manage_coupon1_" />

    <TextView
        android:id="@+id/tv_coupon1_ex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/one_mobile_pop"
        android:text="5000원 할인"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="@+id/tv_manage_coupon2_"
        app:layout_constraintTop_toBottomOf="@+id/tv_manage_coupon2_" />

    <TextView
        android:id="@+id/tv_use_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="내역"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/tv_use_date"
        app:layout_constraintTop_toTopOf="@+id/tv_log_explain" />

    <TextView
        android:id="@+id/tv_log_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="사용 내역= "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_use_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="날짜"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/tv_log_explain"
        app:layout_constraintTop_toTopOf="@+id/tv_log_explain" />

</androidx.constraintlayout.widget.ConstraintLayout>